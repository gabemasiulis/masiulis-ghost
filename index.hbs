{{!< default}}

<div class="blogTitle masiBg">
  <h1 class="page-title">{{@blog.title}}</h1>
  <h3 class="page-description">{{@blog.description}}</h3>
</div>
<main>
  {{#foreach posts}}
  <article>
    <time datetime="{{date format="YYYY-MM-DD"}}">
      <h3 class="masiDate">
        {{date format="Do/MMM"}}
      </h3>
      <h4>
        {{date format="YYYY"}}
      </h4>
    </time>
    <header class="masiPostHeader">
      <h2><a href="{{url}}">{{title}}</a></h2>
      <h5>{{tags prefix="#" separator=" &bull; "}}</h5>
  </article>
  {{/foreach}}
</main>
